<div id="container" data-game-id="{{game.gameId}}">
    <h1>The Dot Game</h1>

    <div class="top-container">
        <div class="chart-container">
            <canvas id="cfd"></canvas>
        </div>

        {{>iteration-stats }}
    </div>

    <div>
        <progress value="" max="" id="progressbar"></progress>
    </div>

    <button id="start-iteration">Start Iteration</button>
    <label>
        Minutes
        <input id="iteration-length" type="text" value="5">
    </label>

    <div id="board">
        {{#each game.columns}}
            {{>column column=this game=../game}}
        {{/each}}
    </div>

</div>

{{>cardtemplate }}
